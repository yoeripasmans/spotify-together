<!DOCTYPE html>
<html lang="en">

<head>
	<% include ./partials/head %>
</head>

<body>
	<% include ./partials/header %>
		<main>
			<h1>Create playlist</h1>
			<a href="/playlists">Back</a>

			<form name="create-playlist" method="POST" action="/create">
				<div>
					<label for="img">Image</label>
					<input name="img" id="img" type="file">
				</div>

				<div>
					<label for="name">Name</label>
					<input type="text" name="name" id="name" required>
				</div>

				<div>
					<label for="description">Description</label>
					<input type="text" name="description" id="description">
				</div>

				<div>
					<label for="private">Make playlist private</label>
					<input id="private" name="private" type="checkbox">
				</div>

				<div>
					<label for="restricted">Make playlist restricted</label>
					<input id="restricted" name="restricted" type="checkbox">
				</div>

				<div>
					<label for="password">Password</label>
					<input id="password" name="password" type="password">
				</div>

				<div>
					<label for="artist">Artist</label>
					<input id="text" name="artist" type="artist">
				</div>

				<select>
			  <option value="pop">Pop</option>
			  <option value="hiphop">Hiphop</option>
			  <option value="rock">Rock</option>
			  <option value="classic">classic</option>
			</select>

				<input type="submit" value="Save">
			</form>
		</main>
		<script src="/js/form.js"></script>
		<% include ./partials/scripts %>
</body>

</html>